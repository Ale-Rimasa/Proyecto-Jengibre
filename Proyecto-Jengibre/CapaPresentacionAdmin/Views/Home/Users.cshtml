}

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Resumen</a></li>
    <li class="breadcrumb-item active">Usuarios</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-user me-1"></i> Lista De Usuarios
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success">Crear Nuevo</button>
            </div>
        </div>
        <hr />

        <table id="table" class="display cell-border" style="width:100%">
            <thead>
                <tr>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>Correo</th>
                    <th>Activo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>

    </div>

</div>

@section scripts{

    var tabladata;


    <script>
        jQuery.ajax({

        url: '@Url.Action("ListUseers", "Home")',
        type: "GET",
        dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                var Texto1= "Hola soy el texto 1"
                console.log(data)
            }

        })

        tabladata = $("#table").DataTable({
        responsive: true,
        ordering: false,
        "ajax": {
              url: '@Url.Action("ListUseers", "Home")',
              type: "GET",
              dataType: "json"
            },
            "columns": [
                { "data":"NameUser"},
                { "data":"SurnameUser"},
                { "data":"Mail"},
                {
                    "data": "Active", "render": function (valor) {
                        if(valor) {
                            return '<span class="badge text-bg-success">Si</span>'
                        }else {
                            return '<span class="badge text-bg-danger">No</span>'
                    }

                    }
                },
                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm"><i class="fas fa-pen me-1"></i></button>' +
                        '<button type="button" class="btn btn-danger btn-sm ms-2"><i class="fas fa-trash me-1"></i></button>',
                    "orderable": false,
                    "searchable": false,
                    "width": "90px"

                }


            ]
        })
    </script>


}